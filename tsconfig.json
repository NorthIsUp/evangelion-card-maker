{
    "compilerOptions": {
      "baseUrl": ".",
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "noImplicitAny": false,
      "outDir": "dist",
      "removeComments": false,
      "sourceMap": true,
      "suppressImplicitAnyIndexErrors": true ,
      "target": "es5",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": [
      "src/**/*"
    ]
}
